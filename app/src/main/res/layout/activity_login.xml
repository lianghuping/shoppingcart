<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_reg_xhdpi"
    android:orientation="vertical"
    tools:context=".login.LoginActivity">


    <EditText
        android:id="@+id/et_login_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_155"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@null"
        android:inputType="number"
        android:drawableLeft="@mipmap/login_icon_phone_n_xhdpi"
        android:drawableBottom="@drawable/edit_shape"
        android:drawablePadding="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:hint="@string/phonenum"
        android:maxLines="1"
        android:padding="@dimen/dp_20"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/et_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:inputType="numberPassword"
        android:layout_marginLeft="@dimen/dp_15"
        android:drawableLeft="@mipmap/login_icon_lock_n_xhdpi"
        android:drawableRight="@mipmap/login_icon_eye_n_xhdpi"
        android:layout_marginRight="@dimen/dp_15"
        android:drawableBottom="@drawable/edit_shape"
        android:drawablePadding="@dimen/dp_15"
        android:hint="@string/password"
        android:password="true"
        android:maxLines="1"
        android:padding="@dimen/dp_20"
        android:textColorHint="#fff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/ck_rem_pwd"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:padding="@dimen/dp_16"
            android:textSize="@dimen/sp_12"
            android:text="@string/rem_pwd"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/text_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ck_rem_pwd"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:padding="@dimen/dp_20"
            android:text="@string/fast_reg"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>



    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/dp_260"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/shape"
        android:text="@string/login"
        android:textColor="#ff5f71"
        android:textSize="@dimen/sp_18" />

</LinearLayout>