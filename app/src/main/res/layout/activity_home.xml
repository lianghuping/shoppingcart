<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.activity.HomeActivity">

    <FrameLayout
        android:id="@+id/frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></FrameLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_81"
        android:background="@mipmap/dbl"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radioButton0"
            android:layout_width="@dimen/dp_26"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:checked="true"
            android:background="@drawable/select1"
            android:button="@null" />
        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="@dimen/dp_26"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_32"
            android:background="@drawable/select2"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="@dimen/dp_55"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_55"
            android:layout_marginRight="@dimen/dp_32"
            android:background="@mipmap/commom_tab_btn_shopping_cart_n_xhdpi"
            android:button="@null" />
        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="@dimen/dp_26"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_32"
            android:background="@drawable/select4"
            android:button="@null" />
        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="@dimen/dp_26"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_32"
            android:background="@drawable/select5"
            android:button="@null" />
    </RadioGroup>


</RelativeLayout>